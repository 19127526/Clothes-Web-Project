            <ul id="navigation">
              <li>
                <div class="nav-search search-switch">
                  <span class="flaticon-search"></span>
                </div>
              </li>
              <li>
                {{#if user}}
                  <a href="/profile"><span class="flaticon-user">&nbsp Welcome
                      {{user.firstname}}</span></a>
                  <ul class="submenu">
                    <li><a href="/profile">Profile</a></li>
                      <li><a href="/history">History</a></li>
                    <li><a href="/logout">Logout</a></li>
                  </ul>
                {{else}}
                  <a href="/login"><span class="flaticon-user"></span></a>
                  <ul class="submenu">
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                  </ul>
                {{/if}}
              </li>
              <li>
                  <a href="/cart">
                      <span class="flaticon-shopping-cart">
                          {{#if cart.total}}
                              <span id="totalcart" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                {{cart.total}}
                                </span>
                          {{else}}
                              <span id="totalcart" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                  0
                              </span>
                          {{/if}}

                      </span>
                  </a>
              </li>
            </ul>
          </div>
        </div>
    </div>
    <div class="search-model-box">
        <div class="h-100 d-flex align-items-center justify-content-center">
