<main>
    <div class="slider-area ">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>History</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="about-details section-padding30">
        {{#each list}}
            <form method="post" action="/history/detail/{{this.BillID}}">
            <section class="section mb-130">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-block">
                                <section class="example">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Product Name</th>
                                                <th>Size</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                                <th>Order Date</th>
                                                <th>Status</th>

                                            </tr>
                                            </thead>
                                            {{#each this.listProduct}}
                                                <tbody>
                                                <tr>
                                                    <td>{{this.OrderID}}</td>
                                                    <td>{{this.ProName}}</td>
                                                    <td>{{this.Size}}</td>
                                                    <td>{{this.Amount}}</td>
                                                    <td>{{format_number this.Total}}</td>
                                                    <td>{{timeBill this.OrderDate}}</td>
                                                    <td>{{this.Name}}</td>
                                                </tr>
                                                </tbody>
                                            {{/each}}
                                        </table>
                                    </div>
                                </section>
                                <div class="card-title-block" id="{{this.BillID}}"style="display: flex; flex-direction: row;justify-content: center">
                                    <button class="btn btn-primary btn-sm rounded-s" name="DetailOrder"> Detail Order </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="detailbill"  >
                    <div class="modal-dialog" role="document" style="display: flex; flex-direction: row;justify-content: center; object-fit: fill">
                        <div class="modal-content" style="width: fit-content;height: fit-content">
                            <div class="modal-header">
                                <h4 class="modal-title">
                                    <i class="fa fa-check"></i> &nbsp;Th√¥ng tin Bill</h4>
                                <button type="button" id="close" class="btn-close" data-dismiss="modal" aria-label="Close">

                                </button>
                            </div>
                            <div class="modal-body">
                                <section class="example">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>ID Bill</th>
                                                <th>Email</th>
                                                <th>Address</th>
                                                <th>Phone Number</th>

                                                <th>Order Date</th>
                                                <th>Status</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>
                                                <td>{{this.BillID}}</td>
                                                <td>{{this.Email}}</td>
                                                <td >{{this.Address}}</td>
                                                <td>{{this.PhoneNumber}}</td>
                                                <td>{{timeBill this.Date}}</td>
                                                <td>{{this.Name}}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="no" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            </form>
        {{/each}}
    </div>
</main>

{{#section 'js'}}
    <script>
        $(document).ready(function() {
            {{#each list}}
                console.log(document.getElementById({{this.BillID}}))
                document.getElementById({{this.BillID}}).getElementsByTagName("button")[0].addEventListener("click",function (data){
                    const temp=this.parentElement
                            .parentElement.parentElement.parentElement.parentElement
                            .parentElement.getElementsByClassName("modal fade")[0];
                    console.log(temp)
                    $(temp).modal('show')
                })
            {{/each}}
        });
    </script>
{{/section}}
