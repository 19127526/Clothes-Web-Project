<main>
    <div class="slider-area ">
        <div class="single-slider slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center border-light">
    <div class="col-xl-7 col-lg-8 col-md-10 border-light " style="width: fit-content;height: fit-content;">
    <div style="color: #0b1c39">
        {{messages.error}}
    </div>
    <form action="/login" method="post">
        <div class="card justify-content-center" style="width: 500px;height: fit-content;">
        <div class="input-group">
            <span class="input-group-text" style="width: 100px; text-align: center;" >Email</span>
            <input type="text" aria-label="First name" class="form-control" placeholder="Enter Email">
        </div>
        <div class="input-group">
            <span class="input-group-text" style="width: 100px; text-align: center">Password</span>
            <input type="password" aria-label="First name" class="form-control" placeholder="Enter Password">
        </div>
        <button class="btn btn-outline-primary" type="submit" >Login</button>
        </div>
    </form>
    <a href="/register" style="color: #0b0b0b">
        <u>Register</u>
    </a>
    </div>
    </div>
</main>
